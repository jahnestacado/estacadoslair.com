<form class="form-update-credentials">
    <h2 class="form-update-credentials-heading">Credentials</h2>
    <input type="string" id="username" class="form-control" placeholder="Username" required="">
    <input type="password" id="currentPassword" class="form-control" placeholder="Current Password" required="" autofocus="">
    <input type="password" id="newPassword" class="form-control" placeholder="New Password" required="">
    <input type="password" id="newPasswordConfirmation" class="form-control" placeholder="Confirm Password" required="">
    <button id="update-credentials-btn" class="btn btn-md btn-primary btn-block" type="submit">Submit</button>
</form>